FROM php:8.4-fpm

# ---- System deps per PHP + build estensioni ----
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl gnupg \
    libxml2-dev \
    libzip-dev \
    libpng-dev \
    libcurl4-openssl-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libicu-dev \
    libpq-dev \
    default-libmysqlclient-dev \
    zlib1g-dev \
    default-mysql-client \
    libmemcached-dev \
    libz-dev \
    unzip \
 && rm -rf /var/lib/apt/lists/*

# ---- Estensioni PHP tipiche per Laravel ----
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install -j"$(nproc)" \
      gd mysqli pdo_mysql intl zip opcache \
 && pecl install memcached \
 && docker-php-ext-enable memcached mysqli

# ---- Composer ----
RUN curl -sS https://getcomposer.org/installer \
 | php -- --install-dir=/usr/local/bin --filename=composer

# ---- Node.js 22 + npm (NodeSource) ----
# Reinstallo le list, eseguo setup NodeSource e installo nodejs
RUN apt-get update \
 && curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
 && apt-get install -y --no-install-recommends nodejs \
 && node -v && npm -v \
 && rm -rf /var/lib/apt/lists/*

# ---- Config PHP personalizzata (se ti serve) ----
# Metti solo override mirati, non sostituire tutto php.ini
COPY php.ini /usr/local/etc/php/conf.d/zz-custom.ini

# Working dir coerente al volume che monti nel compose
WORKDIR /var/www/html
