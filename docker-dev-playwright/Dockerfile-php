FROM php:8.4-fpm

# ---- System deps per PHP + build estensioni ----
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl gnupg \
    libxml2-dev \
    libzip-dev \
    libpng-dev \
    libcurl4-openssl-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libicu-dev \
    libpq-dev \
    default-libmysqlclient-dev \
    zlib1g-dev \
    default-mysql-client \
    libmemcached-dev \
    libz-dev \
    unzip \
 && rm -rf /var/lib/apt/lists/*

# ---- Estensioni PHP tipiche per Laravel ----
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install -j"$(nproc)" \
      gd mysqli pdo_mysql intl zip opcache \
 && pecl install memcached mongodb \
 && docker-php-ext-enable memcached mysqli mongodb

# ---- Composer ----
RUN curl -sS https://getcomposer.org/installer \
 | php -- --install-dir=/usr/local/bin --filename=composer

# ---- Node.js 22 + npm (NodeSource) ----
# Reinstallo le list, eseguo setup NodeSource e installo nodejs
RUN apt-get update \
 && curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
 && apt-get install -y --no-install-recommends nodejs \
 && node -v && npm -v \
 && rm -rf /var/lib/apt/lists/*

# ---- Playwright Browser Dependencies ----
# Installa dipendenze sistema per Chromium headless
RUN apt-get update && apt-get install -y --no-install-recommends \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    fonts-liberation \
 && rm -rf /var/lib/apt/lists/*

# ---- Crea directory cache per Playwright ----
# Seguendo XDG Base Directory Specification
RUN mkdir -p /var/www/.cache \
 && chown -R www-data:www-data /var/www/.cache

# ---- Config PHP personalizzata (se ti serve) ----
# Metti solo override mirati, non sostituire tutto php.ini
COPY docker-dev-playwright/php.ini /usr/local/etc/php/conf.d/zz-custom.ini

# Working dir coerente al volume che monti nel compose
WORKDIR /var/www/html

# ---- Playwright Setup ----
# Copia package.json (ora il context Ã¨ ecommerce/, non docker-dev/)
COPY package.json package-lock.json* ./

# Installa npm dependencies (include Playwright)
RUN npm install --production=false

# Installa browser Chromium come utente www-data
# Questo deve essere fatto DOPO npm install e come utente www-data
USER www-data
RUN PLAYWRIGHT_BROWSERS_PATH=/var/www/.cache/ms-playwright \
    npx playwright install chromium

# Torna a root per eventuali altri setup
USER root

# Verifica che Chromium sia installato correttamente
RUN ls -la /var/www/.cache/ms-playwright/chromium-*/chrome-linux/chrome || \
    echo "WARNING: Chromium not found in expected location"
